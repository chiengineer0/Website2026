---
import { getCollection } from 'astro:content';
import { Zap } from 'lucide-react';
const services = (await getCollection('services')).slice(0, 10);
---
<section class="container-shell py-16" id="services-overview">
  <div class="mb-8 flex items-center justify-between">
    <h2 class="text-3xl font-black">Precision Services</h2>
    <a href="/Website2026/services/" class="text-sm text-[var(--color-electric)]">View all services →</a>
  </div>
  <div class="hidden gap-4 md:grid md:grid-cols-5">
    {services.map((service) => (
      <a href={`/Website2026/services/${service.slug}/`} class="glow-hover rounded-xl border border-white/15 bg-white/5 p-4">
        <div class="mb-3 inline-flex rounded-full bg-[var(--color-electric)]/20 p-2 text-[var(--color-electric)]"><Zap size={18} /></div>
        <h3 class="font-semibold">{service.data.title}</h3>
        <p class="mt-2 text-sm text-white/75">{service.data.description}</p>
        <p class="mt-3 text-xs text-[var(--color-amber)]">{service.data.timeline} · {service.data.startingPrice}</p>
      </a>
    ))}
  </div>
  <div class="md:hidden">
    {services.map((service) => (
      <details class="mb-3 rounded-xl border border-white/15 bg-white/5 p-4">
        <summary class="cursor-pointer font-semibold">{service.data.title}</summary>
        <p class="mt-2 text-sm text-white/80">{service.data.description}</p>
        <a href={`/Website2026/services/${service.slug}/`} class="mt-3 inline-block text-sm text-[var(--color-electric)]">Learn More</a>
      </details>
    ))}
  </div>
</section>

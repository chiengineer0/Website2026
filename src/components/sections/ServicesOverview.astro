---
import { getCollection } from 'astro:content';
import { Zap } from 'lucide-react';
const services = (await getCollection('services')).slice(0, 10);
---
<section class="container-shell py-16" id="services-overview">
  <div class="mb-8 flex items-center justify-between">
    <h2 class="section-title font-black">Precision Services</h2>
    <a href="/Website2026/services/" class="rounded-md px-2 py-1 text-sm text-[var(--color-electric)] hover:bg-white/5">View all services →</a>
  </div>
  <div class="hidden gap-4 md:grid md:grid-cols-2 xl:grid-cols-5">
    {services.map((service) => (
      <a href={`/Website2026/services/${service.slug}/`} class="surface-card glow-hover p-4">
        <div class="mb-3 flex items-center justify-between">
          <span class="inline-flex rounded-full bg-[var(--color-electric)]/20 p-2 text-[var(--color-electric)]"><Zap size={18} /></span>
          <span class="rounded-full border border-white/20 px-2 py-1 text-[10px] uppercase tracking-wide text-white/70">{service.data.category}</span>
        </div>
        <h3 class="text-[1.02rem] font-semibold leading-tight">{service.data.title}</h3>
        <p class="mt-2 text-sm text-white/75">{service.data.description}</p>
        <div class="mt-4 flex flex-wrap gap-2 text-xs">
          <span class="rounded-full border border-white/20 px-2 py-1 text-white/75">{service.data.timeline}</span>
          <span class="rounded-full border border-[var(--color-amber)]/40 px-2 py-1 text-[var(--color-amber)]">{service.data.startingPrice}</span>
        </div>
      </a>
    ))}
  </div>
  <div class="space-y-3 md:hidden">
    {services.map((service) => (
      <details class="surface-card p-4">
        <summary class="cursor-pointer list-none font-semibold">{service.data.title}</summary>
        <p class="mt-2 text-sm text-white/80">{service.data.description}</p>
        <p class="mt-3 text-xs text-white/65">{service.data.timeline} · {service.data.startingPrice}</p>
        <a href={`/Website2026/services/${service.slug}/`} class="mt-3 inline-block text-sm text-[var(--color-electric)]">Learn More →</a>
      </details>
    ))}
  </div>
</section>

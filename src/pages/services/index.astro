---
import { getCollection } from 'astro:content';
import SiteLayout from '@/layouts/SiteLayout.astro';
const services = await getCollection('services');
---
<SiteLayout title="Electrical Services | [BRAND NAME] Electric" description="Panel upgrades, EV charging, rewiring, emergency response, and more.">
  <section class="container-shell py-16">
    <h1 class="text-4xl font-black">Electrical Services</h1>
    <p class="mt-3 max-w-3xl text-white/80">Specialized crews for residential, commercial, and industrial systems with disciplined quality control and code-first execution.</p>
    <div class="mt-8 grid gap-4 md:grid-cols-2 xl:grid-cols-3">
      {services.map((service) => (
        <article class="rounded-xl border border-white/15 bg-white/5 p-5">
          <h2 class="text-xl font-semibold">{service.data.title}</h2>
          <p class="mt-2 text-white/80">{service.data.description}</p>
          <p class="mt-3 text-sm text-[var(--color-amber)]">{service.data.timeline} · {service.data.startingPrice}</p>
          <a href={`/Website2026/services/${service.data.slug}/`} class="mt-4 inline-block min-h-12 text-[var(--color-electric)]">Learn More →</a>
        </article>
      ))}
    </div>
  </section>
</SiteLayout>
